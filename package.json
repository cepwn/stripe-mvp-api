    "@nestjs/sequelize": "^0.1.1",
    "@nestjs/swagger": "^4.8.2",
    "bcrypt": "^5.1.0",
    "class-validator": "^0.13.2",
    "config": "^3.3.9",
    "js-yaml": "^4.1.0",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
